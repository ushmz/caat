{
  "manifest_version": 3,
  "version": "0.0.1",
  "short_name": "caat",
  "name": "Copy as anchor text",
  "description": "Add context menu to copy link as anchor text.",
  "icons": {
    "16": "icon_16x16.png",
    "48": "icon_48x48.png",
    "128": "icon_128x128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["contextMenus", "scripting"],
  "optional_host_permissions": ["http://*/*", "https://*/*"],
  "default_locale": "en"
}
